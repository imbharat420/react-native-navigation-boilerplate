{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components*"],
      "@screens/*": ["src/screens/*"],
      "@svg/*": ["src/assets/svg/*"],
      "@img/*": ["src/assets/img/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
    },
    "resolveJsonModule": true
  }
}
